   "source": [
    "import ipywidgets\n",
    "\n",
    "slider = ipywidgets.FloatSlider(description='x', value=4)\n",
    "text = ipywidgets.FloatText(disabled=True, description='x^2')\n",
    "\n",
    "def compute(*ignore):\n",
    "    text.value = str(slider.value ** 2)\n",
    "\n",
    "slider.observe(compute, 'value')\n",
    "\n",
    "ipywidgets.VBox([slider, text])"
   ]
  }
