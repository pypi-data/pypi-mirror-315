<odoo>
    <record id="product_pricelist_item_form_view_sale_categ" model="ir.ui.view">
        <field name="name">product.pricelist.item.form.sale.categ</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pricelist_rule_target']" position="inside">
                <field
                    name="sale_categ_id"
                    attrs="{
                        'invisible':[('applied_on', '!=', '2_0_product_sale_category')],
                        'required':[('applied_on', '=', '2_0_product_sale_category')]}"
                    options="{'no_create':1}"
                />
            </xpath>
        </field>
    </record>
</odoo>
