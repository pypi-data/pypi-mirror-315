<odoo>

    <record id="product_template_form_view_sale_categ_id" model="ir.ui.view">
        <field name="name">product.template.common.form.sale.categ.id</field>
        <field name="model">product.template</field>
        <field name="priority">16</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="categ_id" position="before">
                <field name="sale_categ_id" />
            </field>
        </field>
    </record>

    <record id="product_template_search_view_sale_categ" model="ir.ui.view">
        <field name="name">product.template.search.sale.categ</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            <field name="categ_id" position="before">
                <field
                    name="sale_categ_id"
                    filter_domain="[('sale_categ_id', 'child_of', raw_value)]"
                />
            </field>
            <xpath expr="//filter[@name='categ_id']" position="before">
                <filter
                    string="Product Sale Category"
                    name="sale_categ_id"
                    context="{'group_by':'sale_categ_id'}"
                />
            </xpath>
        </field>
    </record>

</odoo>
