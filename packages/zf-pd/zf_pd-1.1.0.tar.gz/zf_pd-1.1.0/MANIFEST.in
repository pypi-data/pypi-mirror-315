# MANIFEST.in
include LICENSE
include README.md
include requirements.txt

# config
recursive-include pd/config/templates *

# init

## fastapi
recursive-include pd/init/templates/pd-fastapi *
global-exclude pd/init/templates/pd-fastapi/node_modules/*
global-exclude pd/init/templates/pd-fastapi/venv/*

## react
recursive-include pd/init/templates/pd-react *
global-exclude pd/init/templates/pd-react/node_modules/*

## nextjs
recursive-include pd/init/templates/pd-nextjs *
global-exclude pd/init/templates/pd-nextjs/node_modules/*

## electron
recursive-include pd/init/templates/pd-electron *
global-exclude pd/init/templates/pd-electron/node_modules/*

## pegasus
include pd/init/templates/pd-pegasus/requirements.txt
recursive-include pd/init/templates/pd-pegasus *
global-exclude pd/init/templates/pd-pegasus/node_modules/*
global-exclude pd/init/templates/pd-pegasus/venv/*

# nginx
recursive-include pd/nginx/templates *