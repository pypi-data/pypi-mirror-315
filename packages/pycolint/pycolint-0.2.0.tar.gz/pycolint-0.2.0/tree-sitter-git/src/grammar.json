{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "git_msg",
  "rules": {
    "hdr": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "type"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "scope"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "!"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": ": "
        },
        {
          "type": "SYMBOL",
          "name": "descr"
        }
      ]
    },
    "type": {
      "type": "SYMBOL",
      "name": "word"
    },
    "word": {
      "type": "PATTERN",
      "value": "[a-zA-Z0-9_-]+"
    },
    "scope": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "("
        },
        {
          "type": "SYMBOL",
          "name": "word"
        },
        {
          "type": "STRING",
          "value": ")"
        }
      ]
    },
    "symbol": {
      "type": "PATTERN",
      "value": "[,:(){}/^_$; %+=!@#~><-]"
    },
    "dot": {
      "type": "STRING",
      "value": "."
    },
    "descr": {
      "type": "SEQ",
      "members": [
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "word"
              },
              {
                "type": "SYMBOL",
                "name": "symbol"
              },
              {
                "type": "SYMBOL",
                "name": "dot"
              }
            ]
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "word"
            },
            {
              "type": "SYMBOL",
              "name": "symbol"
            }
          ]
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
