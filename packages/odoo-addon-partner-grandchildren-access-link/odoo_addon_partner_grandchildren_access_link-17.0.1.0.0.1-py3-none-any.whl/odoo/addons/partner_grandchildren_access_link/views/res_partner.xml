<odoo>

    <record id="view_partner_form_grandchildren" model="ir.ui.view">
        <field name="name">res.partner.form.grandchildren</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="partner_grandchildren.view_partner_form_grandchildren"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='grandchild_ids']/kanban/templates//field[@name='name']"
                position="after"
            >
                <button
                    class="btn btn-link"
                    type="object"
                    name="open_child_form"
                    title="Open full form"
                >
                    <i
                        class="fa fa-caret-right fa-2x"
                        style="position:absolute;top:-4px;right:5px;transform:rotateY(0deg) rotate(-45deg);"
                    />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
