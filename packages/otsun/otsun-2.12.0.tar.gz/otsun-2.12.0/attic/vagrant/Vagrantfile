Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/bionic64"


  config.ssh.forward_agent = true
  config.ssh.forward_x11 = true

  config.vm.provider "virtualbox" do |vb|
	  vb.cpus = 3
  end

  config.vm.define :freecad016, autostart:false do |freecad016|
    freecad016.vm.network "forwarded_port", guest: 5002, host: 5002
    freecad016.vm.provision :shell, path: "bootstrap.sh"
  end

  config.vm.define :freecad_stable do |freecad_stable|
    freecad_stable.vm.network "forwarded_port", guest: 5002, host: 5003
    freecad_stable.vm.provision :shell, path: "bootstrap_stable.sh"
  end
end
