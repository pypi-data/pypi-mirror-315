<odoo>
<record id="ir_sequence_all_rule" model="ir.rule">
    <field name="name">ir.sequence - All Users</field>
    <field name="model_id" ref="base.model_ir_sequence" />
        <field name="domain_force">
            ['|', ('operating_unit_ids','=',False),
            ('operating_unit_ids','in',user.operating_unit_ids.ids)]
        </field>
    <field name="perm_unlink" eval="0" />
    <field name="perm_write" eval="0" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="0" />
</record>
</odoo>
